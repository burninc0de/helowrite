#!/usr/bin/env bash
# Wrapper to run HeloWrite using the project's virtualenv Python
# Usage: helowrite [file.md]

SCRIPT_DIR="/home/zeno/Dev/helowrite"
VENV_PY="$SCRIPT_DIR/venv/bin/python"

if [ -x "$VENV_PY" ]; then
  exec "$VENV_PY" "$SCRIPT_DIR/app.py" "$@"
else
  echo "Virtualenv python not found at $VENV_PY" >&2
  exit 1
fi
